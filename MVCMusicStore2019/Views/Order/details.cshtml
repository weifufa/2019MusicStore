@using MVCMusicStore2019.ViewModels.MusicStores
@model  IEnumerable<OrderItemViewModel>
<div class="panel panel-primary">
    <div class="panel-heading">
        详单列表
    </div>
    <table class="table table-striped">
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.OrderNumber)</th>*@
            <th>@Html.DisplayNameFor(model => model.AlbumName)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="6" class="text-center">没有详单数据</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(modelItem => item.OrderNumber)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.AlbumName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("返回", "Index", "Order", null, new { @class = "btn btn-danger btn-xs" })
