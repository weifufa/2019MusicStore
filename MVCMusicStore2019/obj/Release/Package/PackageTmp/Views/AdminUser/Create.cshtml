@using MVCMusicStore2019.ViewModels
@model AdminCreateUserViewModel
@{
    ViewBag.Title = "Add User新增用户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin——新增用户信息</h2>

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="form-group">
        @*<label>姓名</label>*@
        @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "col-md-2 control-label" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-md-2 control-label" })
        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">创建</button>
    @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
}

