@model IEnumerable<MVCMusicStore2019.ViewModels.MusicStores.AlbumViewModel>
@{ViewBag.Title = "Album";}
<h2>专辑</h2>
<table class="table table-condensed table-striped">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>IssueTime</th>
        <th>IssueTime</th>
        <th>IssueUser</th>
        <th>LanguageClassification</th>
        <th>Price</th>
        <th>Genre</th>
        <th>AlbumType</th>
        <th>Artist</th>
    </tr>
    @if (Model == null)
    {
        <tr>
            <td colspan="10" style="text-align:center;">没数据</td="10">
        </tr>
    }
    else
    {

        foreach (var item in Model)
        {
            <tr>
                <td>@item.Artist.Name</td>
                <td>@item.Name</td>
                <td>@String.Format("{0:C}", item.Price)</td>
            </tr>
        }
    }

</table>